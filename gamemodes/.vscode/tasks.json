{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile Pawn",
      "type": "shell",
     "command": "C:\\Users\\lenovo\\Documents\\new project\\flow-rp-main\\pawno\\pawncc.exe",
      "args": [
        "${file}",
        "-iincludes",
        "-o${fileDirname}/${fileBasenameNoExtension}.amx"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "pawn",
        "pattern": {
          "regexp": "(.+)\\((\\d+)\\) : (warning|error) (\\d+): (.+)",
          "file": 1,
          "line": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        }
      }
    }
  ]
}
